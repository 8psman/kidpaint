<resources>

    <!-- Base application theme. -->
    <style name="KidPaint.Default" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/KidPaint.ActionBar.Default</item>
        <item name="android:windowBackground">@color/theme_1</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="KidPaint.NoActionBar" parent="KidPaint.Default">
        <item name="background">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="KidPaint.Paint" parent="KidPaint.Default">
        <item name="background">@android:color/white</item>
    </style>

    <style name="KidPaint.ActionBar.Default" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:actionButtonStyle">@style/KidPaint.ActionBar.Default.ActionButton</item>
        <item name="actionButtonStyle">@style/KidPaint.ActionBar.Default.ActionButton</item>
    </style>

    <style name="KidPaint.ActionBar.Default.ActionButton" parent="@style/Widget.AppCompat.Light.ActionButton">
        <item name="android:background">@drawable/action_button_background</item>
    </style>

    <style name="KidPaint.ActionBar.Blue" parent="KidPaint.ActionBar.Default">
        <item name="android:background">@color/theme_1</item>
        <item name="background">@color/theme_1</item>
    </style>

    <style name="KidPaint.ActionBar.Green" parent="KidPaint.ActionBar.Default">
        <item name="android:background">@color/theme_2</item>
        <item name="background">@color/theme_2</item>
    </style>

    <style name="KidPaint.ActionBar.Red" parent="KidPaint.ActionBar.Default">
        <item name="android:background">@color/theme_3</item>
        <item name="background">@color/theme_3</item>
    </style>

    <style name="KidPaint.ActionBar.Aqua" parent="KidPaint.ActionBar.Default">
        <item name="android:background">@color/theme_4</item>
        <item name="background">@color/theme_4</item>
    </style>

    <style name="KidPaint.ActionBar.Magenta" parent="KidPaint.ActionBar.Default">
        <item name="android:background">@color/theme_5</item>
        <item name="background">@color/theme_5</item>
    </style>

    <style name="KidPaint.ActionBar.Yellow" parent="KidPaint.ActionBar.Default">
        <item name="android:background">@color/theme_6</item>
        <item name="background">@color/theme_6</item>
    </style>

</resources>
